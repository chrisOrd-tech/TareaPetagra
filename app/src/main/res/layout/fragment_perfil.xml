<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ingchristopher.tareamascotas.ActivityDos$Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/circular_image"
            android:layout_height="@dimen/circular_image"
            android:src="@drawable/perro1"
            app:civ_border="true"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="8dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10" />

        <TextView
            android:id="@+id/tvNombreMiMascota"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mi_mascota"
            android:textSize="@dimen/hueso"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMiMascota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </GridLayout>

    </LinearLayout>

</FrameLayout>
